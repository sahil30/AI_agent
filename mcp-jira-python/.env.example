# Jira Configuration
JIRA_BASE_URL=https://your-domain.atlassian.net

# Option A: Bearer Token Authentication (Recommended)
JIRA_ACCESS_TOKEN=your-jira-access-token
USE_BEARER_TOKEN=true

# Option B: Username + API Token Authentication (Legacy)
JIRA_USERNAME=your-email@example.com
JIRA_API_TOKEN=your-jira-api-token
USE_BEARER_TOKEN=false

# Optional: Custom API Configuration (if using custom API instead of Atlassian)
CUSTOM_API_BASE_URL=https://your-api-domain.com
CUSTOM_API_KEY=your-custom-api-key
CUSTOM_API_VERSION=v1
USE_CUSTOM_API=false

# Server Configuration
LOG_LEVEL=INFO
MAX_RESULTS_DEFAULT=50